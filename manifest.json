{
  "manifest_version": 3,
  "name": "Machines4U Scraper",
  "version": "1.1",
  "description": "Scrapes product details from Machines4U listings.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/scan.gif"],
      "matches": ["*://*.machines4u.com.au/*"]
    }
  ]
}